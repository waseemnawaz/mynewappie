<div class="container" id="reviu">
  <div class="row">
    <div class="col-md-3">
<% if signed_in? %>
  <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build]) do |f| %>
    </div>
    <div class="col-md-3">
    <p>
      <%= f.label :body, "Comments" %><br>
      <%= f.text_area :body %>
    </p>
    </div>
    <div class="col-md-3">
    <p>
      <%= f.label :rating %><br>
      <%= f.text_field :rating, class: "rating" %>
    </p> 
    </div>
    <div class="col-md-3">
    <p>
      <div class="rating"></div>
    </p> 
    <p>
      <%= f.submit "Submit" %>
    </p>
    </div>
  <% end %>
<% end %>
  </div><!--row-->
</div>


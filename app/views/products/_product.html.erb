<% cache product do %>
	<div class="col-md-4">
        <h1><%= product.name %></h1>
        <!--p><%#= product.description %></p-->
        <p><a href"<%= product_url(product) %>"><%= link_to(image_tag(product.image_url, class: "img-responsive"), product) %></a></p>
        <p><%= product.description %></p>
        <!--p><%#= link_to 'Show', product %></p-->
        <p><% if signed_in? && current_user.admin? %><%= link_to 'Edit', edit_product_path(product) %><% end %></p>
        <p><% if signed_in? && current_user.admin? %><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %><% end %></p>
    </div><!-- /col -->	
<% end %>


<h1 class="zeit"><%= render 'hello' %></h1>
<p id="notice"><%= notice %></p>
<h1 class="new">Listing Products</h1>

<div class="container-fluid">
  <div class="row" id="productos">
    <% @products.each do |product| %>
      <div class="col-md-4">
        <!--h1>Product Name</h1-->
        <h1><%= product.name %></h1>
        <p><%= product.description %></p>
        <p><%= link_to(image_tag(product.image_url, class: "img-responsive"), product) %><%#= product.image_url %></p>
        <p><%= link_to 'Show', product %></p>
        <p><% if signed_in? && current_user.admin? %><%= link_to 'Edit', edit_product_path(product) %><% end %></p>
        <!--p><%#= link_to 'Static', static_pages_contact_path %></p-->
        <p><% if signed_in? && current_user.admin? %><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %><% end %></p>
        <!--p>Description</p>
        <strong>Price 1</strong-->
      </div><!-- /col -->
    <% end %>
  </div>
</div>



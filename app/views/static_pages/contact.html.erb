<div class="container-fluid anchor" id="faque">
  <div class="faqheader">
    <h2><!--span class="glyphicon glyphicon-pencil"></span-->Contact Us</h2>
    <%= flash[:notice] %>

    <%= form_tag("/static_pages/thank_you", class: "my_class") do %>
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="form-group">
          <%= label_tag :name, "Name" %>
          <%= text_field_tag :name, nil, class: "form-control", placeholder: "Your name" %>
        </div>      
        <div class="form-group">
          <%= label_tag :email, "Email" %>
          <%= text_field_tag :email, nil, class: "form-control", placeholder: "Your email" %>
        </div>
        <div class="form-group">
          <%= label_tag :message, "Message" %>
          <%= text_area_tag :message, nil, class: "form-control", placeholder: "Your message" %>
        </div>      
      </div>
    </div>
    <%= submit_tag "Send", class: "my_class" %>   
    <% end %>
  </div>
</div><!-- end container kntkt -->
